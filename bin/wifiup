#!/bin/bash
set -e

if [ -t 1 ]; then
    SUDO=sudo
elif [ ! -z "$DISPLAY" ]; then
    SUDO=gksudo
else
    echo "not on tty or in X!" 
    return 1
fi

$SUDO ifdown eth0
$SUDO wpa_action wlan0 stop
sleep 2

echo "stopping network-manager"
$SUDO /etc/init.d/network-manager stop
$SUDO killall dhclient || true
$SUDO killall dhclient3 || true
$SUDO killall wpa_supplicant || true

$SUDO ifup wlan0
sleep 2
iwconfig wlan0
ifconfig wlan0
