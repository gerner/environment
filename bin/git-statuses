#!/bin/bash

for x in *
do
	pushd $x > /dev/null

	didPWD=""
	if ! git status | grep -q "nothing to commit (working directory clean)"; then
		if [ -z $didPWD]; then pwd; didPWD="1"; fi
		git status
		echo ""
	fi
	
	if grep -q "svn" .git/config ; then
		status_svn=`git status-svn`
		if [ "$status_svn" ]; then
			if [ -z $didPWD]; then pwd; didPWD="1"; fi
			echo "$status_svn"
			echo ""
		fi
	fi

	popd > /dev/null
done
