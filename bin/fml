#!/bin/bash

set -eu
set -o pipefail

message=""
while getopts ":m:" arg; do
    case ${arg} in
        m )
            message="$OPTARG"
            ;;
        : )
            echo "invalid argument" 1>&2
            exit 1
            ;;
    esac
done
shift $((OPTIND -1))

FMLLOG=~/.fml

FMLS=0

trap cntrl_c INT

function cntrl_c() {
    if [[ -z "${message}" ]]; then
        echo "`date`	${FMLS}" >> ${FMLLOG}
    else
        echo "`date`	${FMLS}	# ${message}" >> ${FMLLOG}
    fi
    exit 0
}


while(true); do
    FMLS=$((${FMLS} + 1))
    #echo -n 'fml';
    #sleep .1;
    cowsay "you're the man now dog" | while IFS=$'\n' read -r line; do echo "$line"; sleep 0.05; done; sleep 0.7;
done
